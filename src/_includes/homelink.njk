<script>
let root = document.documentElement;

document.querySelectorAll('.swatch').forEach(s => s.addEventListener('click', event => {
  const color = event.target.value

  const colors = {
    'yellow' : '#e5b360',
    'grey': '#c1c1c1',
    'red': '#9e421d',
    'orange': '#b26722',
    'blue': '#00649b',
    'green': '#50633b',
    'black': '#171619'
  }


  root.style.setProperty('--theme-color', colors[color])
}))



</script>