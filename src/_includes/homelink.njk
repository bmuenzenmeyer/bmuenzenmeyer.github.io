  <div class="swatches">
    <button value="blue" class="swatch swatch--blue">Blue</button>
    <button value="yellow" class="swatch swatch--yellow">Yellow</button>
    <button value="orange" class="swatch swatch--orange">Orange</button>
    <button value="red" class="swatch swatch--red">Red</button>
